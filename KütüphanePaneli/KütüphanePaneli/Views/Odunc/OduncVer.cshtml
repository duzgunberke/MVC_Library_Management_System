@model KütüphanePaneli.Models.Entity.TBL_HAREKET
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/SidebarLayout.cshtml";
}

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>ÜYE ADI</label>
        @*@Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_UYELER.ID, (List<SelectListItem>)ViewBag.dgr1,
       new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>KİTAP ADI</label>
        @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_KITAP.ID, (List<SelectListItem>)ViewBag.dgr2,
      new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>PERSONEL ADI</label>
        @*@Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TBL_PERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3,
     new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>KİTAP ALIŞ TARİHİ</label>
        <input type="text" class="form-control" name="ALISTARIH"
               value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>KİTAP İADE TARİHİ</label>
        <input type="text" class="form-control" name="IADETARIH"
               value="@DateTime.Now.AddDays(7).ToShortDateString()" />
    </div>



    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#ffa900;color:#1700ff"><b>Kitabı Ödünç Ver</b></button>
        <input type="hidden" value="False" name="ISLEMDURUM"
    </div>
</form>
