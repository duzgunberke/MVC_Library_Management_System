@model KütüphanePaneli.Models.Entity.TBL_KATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/SidebarLayout.cshtml";
}

@using (Html.BeginForm("KategoriGüncelle", "Kategori", FormMethod.Post))
{
   <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @Html.LabelFor(k => k.ID)
        @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        <br />
        @*Html.LabelFor(k => k.AD)*@
        <label>KATEGORİ ADI</label>
        @Html.TextBoxFor(k => k.AD, new {@class="form-control"})


    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

