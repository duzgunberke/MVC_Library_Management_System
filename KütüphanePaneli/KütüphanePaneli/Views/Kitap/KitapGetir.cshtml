@model KütüphanePaneli.Models.Entity.TBL_KITAP
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/SidebarLayout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.TBL_KATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1,
        new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazarı</label>
            @Html.DropDownListFor(k => k.TBL_YAZAR.ID, (List<SelectListItem>)ViewBag.dgr2,
      new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayınevi</label>
            @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa</label>
            @Html.TextBoxFor(k => k.SAYFASAYISI, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Resim Linki</label>
            @Html.TextBoxFor(k => k.KITAPRESIM, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
        @*<input type="hidden"name="Durum"value="True"/>*@
    </div>


}

