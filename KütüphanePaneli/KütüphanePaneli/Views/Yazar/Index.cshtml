@using KütüphanePaneli.Models.Entity
@model List<TBL_YAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/SidebarLayout.cshtml";
}

<h2>Yazarlar</h2>
<style>
    #kka:hover {
        background-color: #f0ffd7
    }
</style>
<table class="table table-striped">
    <tr style="background-color:#ecc800">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZAR KİTAPLARI</th>

    </tr>
    @foreach (var y in Model)
    {
        <tr id="kka">
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new
       { @class = "btn btn-danger", onclick = "return confirm('Yazarı Silmek İstiyor Musunuz ?')" })
            </td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:darkred; color:white">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
<a class="btn btn-primary" href="/Yazar/YazarEkle">Yeni Yazar Ekle</a>
